{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug MCP Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/server/index.js",
      "args": [],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development",
        "MCP_DEBUG": "1",
        "MCP_VERBOSE": "1"
      },
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "preLaunchTask": "npm-build",
      "cwd": "${workspaceFolder}",
      "restart": true,
      "stopOnEntry": false
    },
    {
      "name": "Debug MCP Minimal Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/minimal/index.js",
      "args": [],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development",
        "MCP_DEBUG": "1",
        "MCP_VERBOSE": "1"
      },
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "preLaunchTask": "npm-build",
      "cwd": "${workspaceFolder}",
      "restart": true,
      "stopOnEntry": false
    },
    {
      "name": "Attach to MCP Server",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "restart": true
    },
    {
      "name": "Debug MCP Server with Inspector",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/server/index.js",
      "args": [],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development",
        "MCP_DEBUG": "1",
        "MCP_VERBOSE": "1"
      },
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "preLaunchTask": "npm-build",
      "cwd": "${workspaceFolder}",
      "restart": true,
      "stopOnEntry": false,
      "runtimeArgs": [
        "--inspect-brk=9229"
      ]
    },
    {
      "name": "Debug Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": [
        "run",
        "--no-coverage"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "test",
        "MCP_DEBUG": "1"
      },
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js",
        "${workspaceFolder}/src/**/*.ts"
      ],
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "preLaunchTask": "npm-build",
      "cwd": "${workspaceFolder}",
      "restart": false
    },
    {
      "name": "Debug Specific Test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": [
        "run",
        "${input:testFile}",
        "--no-coverage"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "test",
        "MCP_DEBUG": "1"
      },
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js",
        "${workspaceFolder}/src/**/*.ts"
      ],
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "preLaunchTask": "npm-build",
      "cwd": "${workspaceFolder}",
      "restart": false
    }
  ],
  "inputs": [
    {
      "id": "testFile",
      "description": "Test file to debug",
      "default": "src/tests/",
      "type": "promptString"
    }
  ]
}
