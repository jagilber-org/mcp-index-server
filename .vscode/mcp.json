				// "INSTRUCTIONS_DIR": "C:/mcp/mcp-index-server-prod/instructions",
				"INSTRUCTIONS_DIR": "C:/github/jagilber/mcp-index-server/devinstructions",
				"FEEDBACK_DIR": "C:/github/jagilber/mcp-index-server/feedback",
				// "FEEDBACK_DIR": "./feedback",
				// ===================== MUTATION CONTROL ========================
				// CAUTION: Mutation enabled for local iterative CRUD & governance tests.
				"MCP_ENABLE_MUTATION": "1",
				// "INSTRUCTIONS_ALWAYS_RELOAD": "1", // disabled to satisfy mcpConfigImperativeDirective test (forbidden active diagnostic flag)
				"MCP_TRACE_LEVEL": "1",
				"MCP_CATALOG_FILE_TRACE": "1",
				"MCP_DASHBOARD": "1",
				"MCP_MEMORY_MONITOR": "1",
				// "MCP_LOG_FILE": "1", // disabled to satisfy mcpConfigImperativeDirective test (forbidden active diagnostic flag)
				// "MCP_LOG_VERBOSE": "1", // Imperative Directive: forbidden diagnostic flag (documentation only, must remain commented)
				"MCP_METRICS_FILE_STORAGE": "1",
				"MCP_METRICS_MAX_FILES": "720",
			}
		},
