{
  "name": "mcp-index-server",
  "version": "1.6.1",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "instructions:normalize": "node scripts/normalize-instructions.js",
    "build": "tsc -p tsconfig.json && node scripts/copy-dashboard-assets.mjs",
    "start": "node dist/server/index.js",
    "start-minimal": "node dist/minimal/index.js",
    "prestart": "npm run build",
    "pretest": "pwsh scripts/pretest-build-or-skip.ps1",
    "dev": "node --watch dist/server/index.js",
    "build:watch": "tsc -w -p tsconfig.json",
    "check:dist": "npm run build && git diff --quiet --exit-code dist || (echo Dist out of date. Run npm run build and commit generated files.& exit 1)",
    "coverage": "vitest run --coverage",
    "sbom": "npx syft packages dir:. -o json > sbom.json || echo 'Syft not installed'",
    "coverage:core": "cross-env FAST_COVERAGE=1 vitest run --coverage --reporter=dot --reporter=json",
  "coverage:ci": "cross-env COVERAGE_HARD_MIN=50 COVERAGE_TARGET=60 npm run coverage:core && node scripts/coverage-alias.js && node scripts/check-coverage.mjs",
    "manifest:generate": "node scripts/generate-manifest.mjs",
    "contract:tools": "node scripts/generate-tools-snapshot.mjs",
    "verify:manifest": "node scripts/verify-manifest.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:contracts": "vitest run src/tests/contractSchemas.spec.ts",
    "test:diag": "cross-env MCP_HEALTH_MIXED_DIAG=1 vitest run src/tests/handshakeFlakeRepro.spec.ts src/tests/healthMixedReproLoop.spec.ts src/tests/healthHangExploration.spec.ts",
    "test:stress": "cross-env MCP_STRESS_DIAG=1 vitest run",
    "test:stress:focus": "cross-env MCP_STRESS_DIAG=1 vitest run src/tests/handshakeFlakeRepro.spec.ts src/tests/healthMixedReproLoop.spec.ts src/tests/healthHangExploration.spec.ts src/tests/healthMultiProcessStress.spec.ts src/tests/dispatcherStress.spec.ts src/tests/dispatcherFlakeStress.spec.ts src/tests/concurrencyFuzz.spec.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:instructions": "node scripts/lint-instructions.mjs",
    "format": "prettier --write .",
    "prepare": "node scripts/setup-hooks.cjs",
    "scan:security": "pwsh scripts/security-scan.ps1",
    "release:patch": "pwsh scripts/bump-version.ps1 patch",
    "release:minor": "pwsh scripts/bump-version.ps1 minor",
    "release:major": "pwsh scripts/bump-version.ps1 major",
    "perf": "ts-node src/perf/benchmark.ts",
    "perf:baseline": "npm run build && node scripts/perf-baseline.mjs",
    "perf:drift": "npm run perf:baseline && node scripts/perf-compare.mjs",
    "perf:trend": "node scripts/perf-trend.mjs",
    "perf:summary": "node scripts/perf-summary-md.mjs",
    "perf:ci": "npm run perf:drift && npm run perf:trend && npm run perf:summary",
    "build:verify": "pwsh scripts/build.ps1 -SkipTests && npm run test:fast && npm run guard:decl",
    "test:fast": "node scripts/test-fast.mjs",
    "test:slow": "node scripts/test-slow.mjs",
    "docs:tools": "node scripts/generate-tools-doc.cjs",
    "health:check": "node scripts/health-check.mjs",
    "guard:skips": "node scripts/check-no-skips.mjs",
    "guard:baseline": "node scripts/guard-baseline.mjs",
    "baseline:sentinel:update": "node scripts/baseline-sentinel.mjs update",
    "baseline:sentinel:verify": "node scripts/baseline-sentinel.mjs verify",
    "guard:decl": "node scripts/guard-declarations.mjs",
    "guard:decl:fix": "node scripts/purge-extra-decls.mjs && node scripts/guard-declarations.mjs",
    "pw:init": "npx playwright install --with-deps chromium firefox webkit",
    "pw:test": "playwright test",
    "playwright:start-server": "cross-env MCP_DASHBOARD=1 node dist/server/index.js",
    "pw:baseline": "node scripts/run-playwright.mjs --grep @baseline --update",
    "pw:drift": "node scripts/run-playwright.mjs --grep @baseline",
    "pw:drift:report": "npm run pw:drift && node scripts/generate-drift-report.mjs",
    "pw:drift:ci": "cross-env DRIFT_BROWSERS=chromium,firefox npm run pw:drift:report",
    "dash:seed": "node scripts/seed-dashboard-fixtures.mjs"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "fast-check": "^3.17.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@mermaid-js/layout-elk": "^0.2.0",
    "@modelcontextprotocol/sdk": "^0.6.0",
    "@types/express": "^5.0.3",
    "@types/ws": "^8.18.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "express": "^5.1.0",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
  },
  "optionalScripts": {},
  "promptReviewCriteriaVersion": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jagilber/mcp-index-server.git"
  },
  "bugs": {
    "url": "https://github.com/jagilber/mcp-index-server/issues"
  },
  "homepage": "https://github.com/jagilber/mcp-index-server#readme",
  "engines": {
    "node": ">=20 <21"
  }
}
