{
  "name": "mcp-index-server",
  "version": "0.2.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server/index.js",
    "dev": "node --watch dist/server/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "prepare": "node scripts/setup-hooks.cjs",
    "scan:security": "pwsh scripts/security-scan.ps1",
    "release:patch": "pwsh scripts/bump-version.ps1 patch",
    "release:minor": "pwsh scripts/bump-version.ps1 minor",
    "release:major": "pwsh scripts/bump-version.ps1 major"
  },
  "devDependencies": {
    "typescript": "^5.5.0",
    "vitest": "^1.6.0",
    "@types/node": "^20.11.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "ajv": "^8.12.0"
  },
  "optionalScripts": {},
  "promptReviewCriteriaVersion": "1.0.0"
}
