{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://example.local/schemas/usage-buckets.schema.json",
  "title": "UsageBucketsContainer",
  "type": "object",
  "description": "Rotating temporal usage buckets persisted to disk.",
  "required": ["version","buckets","rotationCount"],
  "additionalProperties": false,
  "properties": {
    "version": { "type": "integer", "enum": [1] },
    "rotationCount": { "type": "integer", "minimum": 0 },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" },
    "buckets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["start","end","counts"],
        "additionalProperties": false,
        "properties": {
          "start": { "type": "string", "format": "date-time" },
          "end": { "type": "string", "format": "date-time" },
          "counts": { "type": "object", "additionalProperties": { "type": "integer", "minimum": 0 } }
        }
      },
      "minItems": 1,
      "maxItems": 24
    }
  }
}
